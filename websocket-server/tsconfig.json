{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vitest/globals", "node"],
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
